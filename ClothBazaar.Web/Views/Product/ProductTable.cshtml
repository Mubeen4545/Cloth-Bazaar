@model List<Product>
@{
    ViewBag.Title = "ProductTable";
}
<div>
    <form method="post">
        <input id="searchText" name="Search" />
        <button type="button" id="searchBtn">Search</button>
    </form>
    <button type="button" id="newBtn">New</button>
</div>
<div>
    <table>
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model) // model is a list of products as mention above
            {
                <tr>
                    <td>@product.Name</td>
                    <td>-</td>
                    <td>@product.Price</td>
                    <td>
                        <button class="editBtn" data-id="@product.ID">Edit</button>
                        <button class="deleteBtn" data-id="@product.ID">Delete</button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>


<script>
    $("#searchBtn").click(function () {
        var searchValue = $("#searchText").val();
        // alert(searchValue); Ajax ko jm 2 chzeen bta sakty hai k kis url ko hit krna ha
        $.ajax({
            url: '/Product/ProductTable',
            data: {
                search:searchValue
            }
        })
        .done(function(response){
            $("#tablecontainer").html(response);

        })
    .fail(function(XMLHttpRequest,textStatus,errorThrown){
        alert("Fail");

    });
    });
    $("#newBtn").click(function () {

        $.ajax({
            url: '/Product/Create',

        })
        .done(function (response) {
            $("#actionContainer").html(response);

        })
    .fail(function (XMLHttpRequest, textStatus, errorThrown) {
        alert("Fail");

    });
    });
    $(".editBtn").click(function () {
       // debugger;
        $.ajax({
            url: '/Product/Edit',
            data: {
                ID:$(this).attr('data-id')
            }

        })
        .done(function (response) {
            $("#actionContainer").html(response);

        })
    .fail(function (XMLHttpRequest, textStatus, errorThrown) {
        alert("Fail");

    });
    });
    $(".deleteBtn").click(function () {
        var confirmDelete = confirm("Are you sure you want to delete this product?") //response confirmDelete mein ay ga.
        if (confirmDelete)
        {
            $.ajax({
                type: 'POST',
                url: '/Product/Delete',
                data: {
                    ID: $(this).attr('data-id')
                }

                 })
                   .done(function (response) {
                       $("#tablecontainer").html(response);

                 })
                   .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("Fail");

                });
                }

    });
</script>

